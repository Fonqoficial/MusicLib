---
import Layout from '@/layouts/Layout.astro';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
import SearchBar from '@/components/SearchBar.astro';
import ScoreCard from '@/components/ScoreCard.astro';
import ComposerCard from '@/components/ComposerCard.astro';
import { supabase } from '@/lib/supabase';

// Obtener parámetro de búsqueda
const url = new URL(Astro.request.url);
const query = url.searchParams.get('q') || '';

let scores = [];
let composers = [];

if (query.trim()) {
  // Buscar en partituras
  const { data: scoresData } = await supabase
    .from('scores')
    .select(`
      *,
      composer:composers (
        id,
        name,
        nationality
      )
    `)
    .or(`title.ilike.%${query}%,instrument.ilike.%${query}%,genre.ilike.%${query}%`)
    .limit(12);

  scores = scoresData || [];

  // Buscar en compositores
  const { data: composersData } = await supabase
    .from('composers')
    .select('*')
    .ilike('name', `%${query}%`)
    .limit(8);

  composers = composersData || [];
}
---

<Layout title={`Buscar: ${query} - Noted`}>
  <Navbar slot="header" />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Barra de búsqueda -->
    <div class="mb-8">
      <SearchBar defaultValue={query} />
    </div>

    {query.trim() ? (
      <>
        <!-- Resultados de búsqueda -->
        <div class="mb-4">
          <p class="text-gray-600">
            Resultados para: <strong class="text-gray-900">"{query}"</strong>
          </p>
          <p class="text-sm text-gray-500">
            {scores.length} partituras y {composers.length} compositores encontrados
          </p>
        </div>

        <!-- Compositores -->
        {composers.length > 0 && (
          <section class="mb-12">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">
              Compositores
            </h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
              {composers.map(composer => (
                <ComposerCard composer={composer} />
              ))}
            </div>
          </section>
        )}

        <!-- Partituras -->
        {scores.length > 0 && (
          <section>
            <h2 class="text-2xl font-bold text-gray-900 mb-6">
              Partituras
            </h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
              {scores.map(score => (
                <ScoreCard score={score} />
              ))}
            </div>
          </section>
        )}

        <!-- Sin resultados -->
        {scores.length === 0 && composers.length === 0 && (
          <div class="text-center py-12">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">
              No se encontraron resultados
            </h3>
            <p class="text-gray-600 mb-4">
              Intenta con otros términos de búsqueda
            </p>
            <a href="/partituras" class="btn-primary inline-block">
              Explorar todas las partituras
            </a>
          </div>
        )}
      </>
    ) : (
      <!-- Estado inicial -->
      <div class="text-center py-20">
        <svg class="w-24 h-24 text-gray-300 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        <h2 class="text-2xl font-semibold text-gray-900 mb-4">
          ¿Qué estás buscando?
        </h2>
        <p class="text-gray-600 max-w-md mx-auto">
          Busca partituras por título, compositor, instrumento o género musical
        </p>
      </div>
    )}

  </div>

  <Footer slot="footer" />
</Layout>