---
import Layout from '@/layouts/Layout.astro';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
import ScoreCard from '@/components/ScoreCard.astro';
import { supabase } from '@/lib/supabase';

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/compositores');
}

// Obtener compositor
// Al usar select('*'), ya nos traemos la columna 'imagen_url' autom√°ticamente
const { data: composer, error: composerError } = await supabase
  .from('composers')
  .select('*')
  .eq('id', id)
  .single();

if (composerError || !composer) {
  return Astro.redirect('/compositores');
}

// Obtener partituras del compositor
const { data: scores, error: scoresError } = await supabase
  .from('scores')
  .select(`
    *,
    composer:composers (
      id,
      name,
      nationality
    )
  `)
  .eq('composer_id', id)
  .order('title');

const lifespan = composer.birth_year && composer.death_year 
  ? `${composer.birth_year} - ${composer.death_year}`
  : composer.birth_year 
    ? `${composer.birth_year} - presente`
    : 'Fechas desconocidas';
---

<Layout 
  title={`${composer.name} - MusicLib`}
  description={composer.bio || `Explora las partituras de ${composer.name}`}
>
  <Navbar slot="header" />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <nav class="text-sm text-gray-600 mb-6">
      <a href="/" class="hover:text-primary-600">Inicio</a>
      <span class="mx-2">/</span>
      <a href="/compositores" class="hover:text-primary-600">Compositores</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900">{composer.name}</span>
    </nav>

    <div class="bg-gradient-to-r from-primary-50 to-primary-100 rounded-2xl p-8 md:p-12 mb-12">
      <div class="flex flex-col md:flex-row items-center md:items-start gap-8">
        
        <div class="flex-shrink-0">
          {composer.imagen_url ? (
            /* Si hay imagen: La mostramos */
            <img 
              src={composer.imagen_url} 
              alt={`Retrato de ${composer.name}`}
              class="w-32 h-32 rounded-full object-cover shadow-xl border-4 border-white bg-white"
            />
          ) : (
            /* Si NO hay imagen: Mostramos iniciales */
            <div class="w-32 h-32 rounded-full bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center text-white text-5xl font-bold shadow-xl border-4 border-white">
              {composer.name.split(' ').map((n: string) => n[0]).join('').slice(0, 2)}
            </div>
          )}
        </div>

        <div class="flex-1 text-center md:text-left">
          <h1 class="text-4xl font-bold text-gray-900 mb-2">
            {composer.name}
          </h1>
          
          <div class="flex flex-wrap justify-center md:justify-start gap-4 text-sm text-gray-600 mb-4">
            {composer.nationality && (
              <span class="flex items-center gap-1">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9"/>
                </svg>
                {composer.nationality}
              </span>
            )}
            
            <span class="flex items-center gap-1">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              {lifespan}
            </span>
          </div>

          {composer.bio && (
            <p class="text-gray-700 leading-relaxed max-w-3xl">
              {composer.bio}
            </p>
          )}
        </div>
      </div>
    </div>

    <div>
      <h2 class="text-2xl font-bold text-gray-900 mb-6">
        Partituras de {composer.name.split(' ')[0]}
      </h2>

      {scores && scores.length > 0 ? (
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          {scores.map(score => (
            <ScoreCard score={score} />
          ))}
        </div>
      ) : (
        <div class="text-center py-12 bg-gray-50 rounded-lg">
          <p class="text-gray-600">
            No hay partituras disponibles de este compositor
          </p>
        </div>
      )}
    </div>

  </div>

  <Footer slot="footer" />
</Layout>