---
import Layout from '@/layouts/Layout.astro';
---

<Layout title="Iniciar Sesión - Admin">
  <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      
      <!-- Logo -->
      <div class="text-center">
        <h2 class="text-3xl font-bold text-gray-900">
          Panel de Administración
        </h2>
        <p class="mt-2 text-sm text-gray-600">
          Inicia sesión para gestionar partituras
        </p>
      </div>

      <!-- Formulario -->
      <form id="login-form" class="mt-8 space-y-6">
        <div class="rounded-md shadow-sm space-y-4">
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
              Correo electrónico
            </label>
            <input
              id="email"
              name="email"
              type="email"
              required
              class="appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-primary-500 focus:border-primary-500"
              placeholder="admin@ejemplo.com"
            />
          </div>

          <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
              Contraseña
            </label>
            <input
              id="password"
              name="password"
              type="password"
              required
              class="appearance-none rounded-lg relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-primary-500 focus:border-primary-500"
              placeholder="••••••••"
            />
          </div>
        </div>

        <!-- Error message -->
        <div id="error-message" class="hidden text-red-600 text-sm text-center"></div>

        <!-- Submit button -->
        <button
          type="submit"
          class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
        >
          Iniciar Sesión
        </button>
      </form>

      <div class="text-center">
        <a href="/" class="text-sm text-primary-600 hover:text-primary-700">
          ← Volver al inicio
        </a>
      </div>

    </div>
  </div>
</Layout>

<script>
  import { supabase } from '@/lib/supabase';

  const form = document.getElementById('login-form') as HTMLFormElement;
  const errorDiv = document.getElementById('error-message');
  const submitBtn = form?.querySelector('button[type="submit"]') as HTMLButtonElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // 1. Resetear estados visuales
    if (errorDiv) errorDiv.classList.add('hidden');
    if (submitBtn) {
        submitBtn.disabled = true;
        submitBtn.innerText = "Verificando...";
    }

    const formData = new FormData(form);
    const email = formData.get('email') as string;
    const password = formData.get('password') as string;

    try {
      // 2. Intentar Login
      const { data: authData, error: authError } = await supabase.auth.signInWithPassword({
        email,
        password,
      });

      if (authError) throw authError;
      if (!authData.user) throw new Error('No se pudo iniciar sesión');

      // ---------------------------------------------------------
      // 3. NUEVO: Verificar si es Admin antes de redirigir
      // ---------------------------------------------------------
      
      // Opción A: Si usas una tabla 'profiles' con una columna 'role'
      const { data: profile, error: profileError } = await supabase
        .from('profiles') 
        .select('role')
        .eq('id', authData.user.id)
        .single();

      // Si falla la consulta o el rol no es admin
      if (profileError || profile?.role !== 'admin') {
         // Importante: Cerrar la sesión inmediatamente porque no tiene permiso
         await supabase.auth.signOut();
         throw new Error('No tienes permisos de administrador.');
      }

      // 4. Si llegamos aquí, es Admin. Redirigir.
      
      // NOTA IMPORTANTE PARA ASTRO SSR:
      // Aquí deberíamos llamar a un endpoint de API (/api/auth/signin) 
      // para setear la cookie en el servidor antes de redirigir.
      // Por ahora, intentamos la redirección directa:
      
      const params = new URLSearchParams(window.location.search);
      const redirect = params.get('redirect') || '/admin';
      window.location.href = redirect;

    } catch (error: any) {
      console.error('Login error:', error);
      if (errorDiv) {
        // Mostrar mensaje específico si es de permisos, o genérico si es de login
        const msg = error.message === 'No tienes permisos de administrador.' 
            ? error.message 
            : 'Email o contraseña incorrectos';
            
        errorDiv.textContent = msg;
        errorDiv.classList.remove('hidden');
      }
    } finally {
        if (submitBtn) {
            submitBtn.disabled = false;
            submitBtn.innerText = "Iniciar Sesión";
        }
    }
  });
</script>