---
import Layout from '@/layouts/Layout.astro';
import { getComposers } from '@/lib/supabase';

const composers = await getComposers();
---

<Layout title="Nueva Partitura - Admin">
  <div class="min-h-screen bg-gray-50">
    
    <!-- Header -->
    <header class="bg-white shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
        <div class="flex items-center gap-4">
          <a href="/admin" class="text-gray-600 hover:text-gray-900">
            ← Volver
          </a>
          <h1 class="text-2xl font-bold text-gray-900">
            Nueva Partitura
          </h1>
        </div>
      </div>
    </header>

    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      
      <form id="score-form" class="bg-white rounded-lg shadow-lg p-8 space-y-6">
        
        <!-- Información básica -->
        <div class="space-y-6">
          <h2 class="text-lg font-semibold text-gray-900 border-b pb-2">
            Información Básica
          </h2>

          <!-- Título -->
          <div>
            <label for="title" class="block text-sm font-medium text-gray-700 mb-2">
              Título *
            </label>
            <input
              type="text"
              id="title"
              name="title"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
              placeholder="Ej: Sonata para Piano No. 14"
            />
          </div>

          <!-- Compositor -->
          <div>
            <label for="composer_id" class="block text-sm font-medium text-gray-700 mb-2">
              Compositor *
            </label>
            <select
              id="composer_id"
              name="composer_id"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
            >
              <option value="">Selecciona un compositor</option>
              {composers?.map(composer => (
                <option value={composer.id}>{composer.name}</option>
              ))}
            </select>
          </div>

          <!-- Grid de 2 columnas -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            
            <!-- Instrumento -->
            <div>
              <label for="instrument" class="block text-sm font-medium text-gray-700 mb-2">
                Instrumento *
              </label>
              <input
                type="text"
                id="instrument"
                name="instrument"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                placeholder="Ej: Piano"
                list="instruments-list"
              />
              <datalist id="instruments-list">
                <option value="Piano">
                <option value="Guitarra">
                <option value="Violín">
                <option value="Violonchelo">
                <option value="Flauta">
                <option value="Clarinete">
                <option value="Orquesta">
              </datalist>
            </div>

            <!-- Dificultad -->
            <div>
              <label for="difficulty" class="block text-sm font-medium text-gray-700 mb-2">
                Dificultad *
              </label>
              <select
                id="difficulty"
                name="difficulty"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
              >
                <option value="beginner">Principiante</option>
                <option value="intermediate">Intermedio</option>
                <option value="advanced">Avanzado</option>
                <option value="expert">Experto</option>
              </select>
            </div>

            <!-- Género -->
            <div>
              <label for="genre" class="block text-sm font-medium text-gray-700 mb-2">
                Género
              </label>
              <input
                type="text"
                id="genre"
                name="genre"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                placeholder="Ej: Clásica"
              />
            </div>

            <!-- Año de composición -->
            <div>
              <label for="year_composed" class="block text-sm font-medium text-gray-700 mb-2">
                Año de Composición
              </label>
              <input
                type="number"
                id="year_composed"
                name="year_composed"
                min="1500"
                max="2025"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                placeholder="Ej: 1801"
              />
            </div>

            <!-- Duración -->
            <div>
              <label for="duration_minutes" class="block text-sm font-medium text-gray-700 mb-2">
                Duración (minutos)
              </label>
              <input
                type="number"
                id="duration_minutes"
                name="duration_minutes"
                min="1"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                placeholder="Ej: 15"
              />
            </div>

          </div>

          <!-- Descripción -->
          <div>
            <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
              Descripción
            </label>
            <textarea
              id="description"
              name="description"
              rows="4"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
              placeholder="Describe la obra, su historia, características..."
            ></textarea>
          </div>
        </div>

        <!-- Archivos -->
        <div class="space-y-6">
          <h2 class="text-lg font-semibold text-gray-900 border-b pb-2">
            Archivos
          </h2>

          <!-- PDF Upload -->
          <div>
            <label for="pdf" class="block text-sm font-medium text-gray-700 mb-2">
              Archivo PDF *
            </label>
            <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-primary-400 transition-colors">
              <div class="space-y-1 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                </svg>
                <div class="flex text-sm text-gray-600">
                  <label for="pdf" class="relative cursor-pointer bg-white rounded-md font-medium text-primary-600 hover:text-primary-500">
                    <span>Subir archivo</span>
                    <input
                      id="pdf"
                      name="pdf"
                      type="file"
                      accept="application/pdf"
                      required
                      class="sr-only"
                    />
                  </label>
                  <p class="pl-1">o arrastra y suelta</p>
                </div>
                <p class="text-xs text-gray-500">
                  PDF hasta 50MB
                </p>
                <p id="pdf-filename" class="text-sm text-gray-900 font-medium mt-2"></p>
              </div>
            </div>
          </div>

          <!-- Thumbnail URL (opcional) -->
          <div>
            <label for="thumbnail_url" class="block text-sm font-medium text-gray-700 mb-2">
              URL de Miniatura (opcional)
            </label>
            <input
              type="url"
              id="thumbnail_url"
              name="thumbnail_url"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
              placeholder="https://ejemplo.com/imagen.jpg"
            />
          </div>
        </div>

        <!-- Mensajes -->
        <div id="message" class="hidden p-4 rounded-lg"></div>

        <!-- Progress bar -->
        <div id="upload-progress" class="hidden">
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div id="progress-bar" class="bg-primary-600 h-2 rounded-full transition-all" style="width: 0%"></div>
          </div>
          <p id="progress-text" class="text-sm text-gray-600 mt-2 text-center"></p>
        </div>

        <!-- Botones -->
        <div class="flex gap-4 pt-6 border-t">
          <button
            type="submit"
            class="flex-1 bg-primary-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-primary-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
          >
            Crear Partitura
          </button>
          <a
            href="/admin"
            class="flex-1 bg-gray-200 text-gray-800 py-3 px-6 rounded-lg font-semibold text-center hover:bg-gray-300 transition-colors"
          >
            Cancelar
          </a>
        </div>

      </form>

    </div>
  </div>
</Layout>

<script>
  const form = document.getElementById('score-form') as HTMLFormElement;
  const pdfInput = document.getElementById('pdf') as HTMLInputElement;
  const pdfFilename = document.getElementById('pdf-filename');
  const messageDiv = document.getElementById('message');
  const uploadProgress = document.getElementById('upload-progress');
  const progressBar = document.getElementById('progress-bar');
  const progressText = document.getElementById('progress-text');
  const submitBtn = form?.querySelector('button[type="submit"]') as HTMLButtonElement;

  // Mostrar nombre del archivo seleccionado
  pdfInput?.addEventListener('change', (e) => {
    const file = (e.target as HTMLInputElement).files?.[0];
    if (file && pdfFilename) {
      pdfFilename.textContent = `Archivo: ${file.name}`;
    }
  });

  // Manejar envío del formulario
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    if (!submitBtn) return;

    // Deshabilitar botón
    submitBtn.disabled = true;
    submitBtn.textContent = 'Subiendo...';

    // Ocultar mensajes previos
    messageDiv?.classList.add('hidden');
    uploadProgress?.classList.remove('hidden');

    try {
      const formData = new FormData(form);
      const pdfFile = formData.get('pdf') as File;

      if (!pdfFile) {
        throw new Error('Debes seleccionar un archivo PDF');
      }

      // Validar tamaño
      if (pdfFile.size > 50 * 1024 * 1024) {
        throw new Error('El archivo es demasiado grande (máx. 50MB)');
      }

      updateProgress(10, 'Subiendo PDF a Cloudflare R2...');

      // 1. Subir PDF a R2
      const uploadFormData = new FormData();
      uploadFormData.append('pdf', pdfFile);
      uploadFormData.append('composer_id', formData.get('composer_id') as string);
      uploadFormData.append('title', formData.get('title') as string);

      const uploadResponse = await fetch('/api/admin/upload-pdf', {
        method: 'POST',
        body: uploadFormData,
      });

      if (!uploadResponse.ok) {
        const errorData = await uploadResponse.json();
        throw new Error(errorData.error || 'Error al subir PDF');
      }

      const { url: pdfUrl } = await uploadResponse.json();
      updateProgress(60, 'Guardando información en base de datos...');

      // 2. Crear registro en base de datos
      const scoreData = {
        title: formData.get('title'),
        composer_id: formData.get('composer_id'),
        instrument: formData.get('instrument'),
        difficulty: formData.get('difficulty'),
        genre: formData.get('genre') || null,
        year_composed: formData.get('year_composed') ? parseInt(formData.get('year_composed') as string) : null,
        duration_minutes: formData.get('duration_minutes') ? parseInt(formData.get('duration_minutes') as string) : null,
        description: formData.get('description') || null,
        pdf_url: pdfUrl,
        thumbnail_url: formData.get('thumbnail_url') || null,
      };

      const createResponse = await fetch('/api/admin/scores', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(scoreData),
      });

      if (!createResponse.ok) {
        const errorData = await createResponse.json();
        throw new Error(errorData.error || 'Error al crear partitura');
      }

      const { score } = await createResponse.json();
      updateProgress(100, '¡Partitura creada exitosamente!');

      // Mostrar mensaje de éxito
      showMessage('✅ Partitura creada exitosamente', 'success');

      // Redirigir después de 2 segundos
      setTimeout(() => {
        window.location.href = `/partituras/${score.id}`;
      }, 2000);

    } catch (error) {
      console.error('Error:', error);
      showMessage(
        error instanceof Error ? error.message : 'Error al crear la partitura',
        'error'
      );
      
      // Restaurar botón
      submitBtn.disabled = false;
      submitBtn.textContent = 'Crear Partitura';
      uploadProgress?.classList.add('hidden');
    }
  });

  function updateProgress(percent: number, text: string) {
    if (progressBar) {
      progressBar.style.width = `${percent}%`;
    }
    if (progressText) {
      progressText.textContent = text;
    }
  }

  function showMessage(text: string, type: 'success' | 'error') {
    if (!messageDiv) return;

    messageDiv.textContent = text;
    messageDiv.className = `p-4 rounded-lg ${
      type === 'success'
        ? 'bg-green-50 text-green-800 border border-green-200'
        : 'bg-red-50 text-red-800 border border-red-200'
    }`;
    messageDiv.classList.remove('hidden');
  }
</script>