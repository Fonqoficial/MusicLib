---
import Layout from '@/layouts/Layout.astro';
import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
import SearchBar from '@/components/SearchBar.astro';
import ScoreCard from '@/components/ScoreCard.astro';
import { getScores } from '@/lib/supabase';

// Obtener las últimas partituras
const latestScores = await getScores(8);
---

<Layout title="MusicLib - Biblioteca Digital de Partituras">
  <Navbar slot="header" />

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-primary-600 to-primary-800 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto space-y-6">
        <h1 class="text-5xl md:text-6xl font-bold">
          Tu Biblioteca Musical Digital
        </h1>
        <p class="text-xl md:text-2xl text-primary-100">
          Descubre, visualiza y descarga miles de partituras de dominio público
        </p>
        
        <div class="mt-8">
          <SearchBar />
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-8 max-w-2xl mx-auto mt-12">
          <div>
            <div class="text-4xl font-bold">1,000+</div>
            <div class="text-primary-200 text-sm">Partituras</div>
          </div>
          <div>
            <div class="text-4xl font-bold">200+</div>
            <div class="text-primary-200 text-sm">Compositores</div>
          </div>
          <div>
            <div class="text-4xl font-bold">50+</div>
            <div class="text-primary-200 text-sm">Instrumentos</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Latest Scores -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-3xl font-bold text-gray-900">
        Partituras Recientes
      </h2>
      <a href="/partituras" class="text-primary-600 hover:text-primary-700 font-medium">
        Ver todas →
      </a>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {latestScores.map(score => (
        <ScoreCard score={score} />
      ))}
    </div>
  </section>

  <!-- Features -->
  <section class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">
        ¿Por qué MusicLib?
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div class="text-center space-y-4">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold">Búsqueda Avanzada</h3>
          <p class="text-gray-600">
            Encuentra exactamente lo que buscas con filtros por instrumento, dificultad y género.
          </p>
        </div>

        <!-- Feature 2 -->
        <div class="text-center space-y-4">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold">Descarga Gratuita</h3>
          <p class="text-gray-600">
            Todas las partituras son de dominio público y totalmente gratuitas.
          </p>
        </div>

        <!-- Feature 3 -->
        <div class="text-center space-y-4">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold">Alta Calidad</h3>
          <p class="text-gray-600">
            PDFs optimizados y listos para imprimir o usar en tablets.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="bg-primary-600 rounded-2xl p-12 text-center text-white">
      <h2 class="text-3xl font-bold mb-4">
        Comienza a Explorar
      </h2>
      <p class="text-xl text-primary-100 mb-8">
        Miles de partituras te están esperando
      </p>
      <div class="flex gap-4 justify-center">
        <a href="/partituras" class="bg-white text-primary-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
          Ver Partituras
        </a>
        <a href="/compositores" class="border-2 border-white px-8 py-3 rounded-lg font-semibold hover:bg-primary-700 transition-colors">
          Ver Compositores
        </a>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</Layout>